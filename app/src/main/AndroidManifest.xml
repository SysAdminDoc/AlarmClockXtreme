<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Alarm Scheduling -->
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Network for weather API -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Calendar for My Day dashboard -->
    <uses-permission android:name="android.permission.READ_CALENDAR" />

    <!-- Location for weather (coarse is sufficient) -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Notifications & Lock Screen -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <!-- Foreground Service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />

    <!-- Audio & Hardware -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Battery Optimization Exemption (legitimate for alarm apps) -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <!-- Custom Ringtone Access -->
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- Manufacturer Battery Killer Detection -->
    <queries>
        <package android:name="com.samsung.android.lool" />
        <package android:name="com.miui.securitycenter" />
        <package android:name="com.huawei.systemmanager" />
        <package android:name="com.oneplus.security" />
    </queries>

    <application
        android:name=".AlarmClockApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AlarmClockXtreme"
        tools:targetApi="35">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AlarmClockXtreme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Full-Screen Alarm Firing Activity -->
        <activity
            android:name=".ui.alarmfiring.AlarmFiringActivity"
            android:exported="false"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:showOnLockScreen="true"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:taskAffinity=""
            android:theme="@style/Theme.AlarmClockXtreme" />

        <!-- Alarm Receiver -->
        <receiver
            android:name=".receiver.AlarmReceiver"
            android:exported="false" />

        <!-- Boot Receiver - Reschedule alarms after reboot -->
        <receiver
            android:name=".receiver.BootReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <!-- Snooze Receiver -->
        <receiver
            android:name=".receiver.SnoozeReceiver"
            android:exported="false" />

        <!-- Dismiss Receiver (from notification actions) -->
        <receiver
            android:name=".receiver.DismissReceiver"
            android:exported="false" />

        <!-- Bedtime Reminder -->
        <receiver
            android:name=".receiver.BedtimeReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.sysadmindoc.alarmclock.BEDTIME_REMINDER" />
            </intent-filter>
        </receiver>

        <!-- Alarm Foreground Service -->
        <service
            android:name=".service.AlarmService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <!-- Home Screen Widget -->
        <receiver
            android:name=".widget.NextAlarmWidgetReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/next_alarm_widget_info" />
        </receiver>

    </application>

</manifest>
